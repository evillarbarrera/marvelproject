<p id="notice"><%= notice %></p>

<h1 alig>Battles</h1>

<h2><%= link_to 'New Battle', new_battle_path , class:"btn btn-success"%></h2>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>People</th>
      <th>Characters</th>
      <th>Date fight</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @battles.each do |battle| %>
      <tr>
        <td><%= battle.people_id %></td>
        <td><%= battle.characters_id %></td>
        <td><%= battle.date_fight %></td>
        <td><%= battle.result %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
